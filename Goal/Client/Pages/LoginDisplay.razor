@using Microsoft.AspNetCore.Components.Authorization

<style>
    .link-button {
        margin-right: 10px;
        padding: 8px 16px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .link-button:hover {
            background-color: #0056b3;
        }

        .link-button:active {
            background-color: #003080;
        }
</style>

<AuthorizeView>
    <Authorized>
        <div>
            <span>@context.User.Identity!.Name </span>
            <button class="link-button" onclick="window.location.href='LogOut'">Вийти</button>
        </div>
    </Authorized>
    <NotAuthorized>
        <div>
            <button class="link-button" onclick="window.location.href='Register'">Реєстрація</button>
            <button class="link-button" onclick="window.location.href='Login'">Увійти</button>
        </div>
    </NotAuthorized>
</AuthorizeView>